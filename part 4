#include <iostream>
using namespace std;
int main() {
  int a,b,c;
cout << "enter three numbers: ";
cin >> a >> b >> c;
if (a > b && a > c) 
 cout << "largest number: " << a << "\n";
else if (b >= a && b >=c)
  cout << "largest number: " << b << "\n";
else
  cout << "largest number: " << c << "\n";

int year;
cout << "enter a year:";
cin >> year;
if (year % 4==0 && year % 100 !=0)
  cout << "leap year";
else 
  cout << "not Leap year";
return 0;
}
